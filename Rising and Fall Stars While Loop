#include <iostream>
#include <string>
using namespace std;
int main()
{
	int z = 1;
	while (z <= 4)
	{
		int w = 1;
		while (w <= z)
		{
			cout << "*";
			w++;
		}
		cout << endl;
		z++;
	}
	int x = 1;
	while (x <= 5)
	{
		int y = x;
		while (y <= 5)
		{
			cout << "*";
			y++;
		}
		cout << endl;
		x++;
	}
}
