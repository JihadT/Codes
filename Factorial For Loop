#include <iostream>
using namespace std;

int main() {
    int x;
    double fact = 1;

    cout << "Enter a positive value: ";
    cin >> x;

    if (x < 0)
        cout << "Error! Inputting a negative value won't work.";
    else {
        for (int y = x; y > 0; y--) {
            fact *= y;
        }
        cout << "Factorial of " << x << " = " << fact;
    }
    return 0;
}
