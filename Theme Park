#include<iostream>
using namespace std;
int main()
{
	cout << "Now please state you age: ";
	int age;
	cin >> age;
	cout << "Please state your height:(In meters) ";
	float height;
	cin >> height;
	
	if (age >= 5 && height >= 0.7)
	{
		cout << "You may enter and Enjoy the rides!!";
	}
	else if (age <= 4 || height <= 0.6)
	{
		cout << "You are too young and/or too short for this ride, sorry.";
	}
	else
	{
		cout << "Huh? I just asked for you age and height.";
	}
}
