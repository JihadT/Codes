#include <iostream>
using namespace std;

int main()
{
{
	int num;
	cout << "Enter a value: ";
	cin >> num;
	if (num % 2 == 0)
	{
		cout << "This number -----> " << num << " <----- is Even" << endl;
	}
	else
	{
		cout << "This number -----> " << num << " <----- is Odd" << endl;
	}
}
	cin.get();
	return 0;
}
