#include <iostream>
using namespace std;

int main()
{
{
	int num;
	cout << "Enter a value: ";
	cin >> num;
	if (num > 0)
	{
		cout << "This number -----> " << num << " <----- is Positive" << endl;
	}
	else if (num < 0)
	{
		cout << "This number -----> " << num << " <----- is Negative" << endl;
	}
	else
	{
		cout << "This number -----> " << num << " <----- is Zero" << endl;
	}
}
	cin.get();
	return 0;
}
