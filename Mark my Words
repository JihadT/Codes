#include <iostream>
using namespace std;

int main()
{
	{
		int grade;
		cout << "Input a grade: ";
		cin >> grade;

		if (grade >= 70)
		{
			cout << "Your grade is A";
		}
		else if (grade >= 60)
		{
			cout << "Your grade is B";
		}
		else if (grade >= 50)
		{
			cout << "Your grade is C";
		}
		else if (grade >= 40)
		{
			cout << "Your grade is D";
		}
		else if (grade <= 39)
		{
			cout << "Your grade is F";
		}
		else
		{
			cout << "Enter a Valid Grade";
		}
	}
	cin.get();
	return 0;
}
