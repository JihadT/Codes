#include <iostream>
using namespace std;

int main()
{
	{
		int grade;
		cout << "You are grading a test paper. Input their marks to determine the grade: ";
		cin >> grade;

		if (grade >= 70)
		{
			cout << "The grade is A\n";
		}
		else if (grade >= 60)
		{
			cout << "The grade is B\n";
		}
		else if (grade >= 50)
		{
			cout << "The grade is C\n";
		}
		else if (grade >= 40)
		{
			cout << "The grade is D\n";
		}
		else if (grade <= 39)
		{
			cout << "The grade is F\n";
		}
		else
		{
			cout << "Enter a valid grade\n";
		}
	}
	cin.get();
	return 0;
}
