#include <iostream>
#include <string>
#include <math.h>
using namespace std;

string	age(int age)
{
	if (age >= 16 && age <= 21)
	{
		return "Do you want to go to the Mall?(Y/N)";
	}
	else if (age >= 22 && age <= 30)
	{
		return "Do you want to go to Hawaii?(Y/N)";
	}
	else if (age < 16)
	{
		return "You are not allowed to proceed you are too young.";
	}
	else if (age > 30)
	{
		return "You are not allowed to proceed you are too old.";
	}
}
string choice(char yn)
{
	switch (yn)
	{
	case 'Y':
	case 'y':
	{
		return "Enjoy your trip to the mall!!";
	}
	case 'N':
	case 'n':
	{
		return "Cancelled your trip";
	}
	default:
	{
		return "Incorrect Input";
	}
	}
}
int main()
{
	cout << "How old are you??" << endl;
	int x;
	cin >> x;
	while (cin.fail())
	{
		cout << "Invalid command enter the numbers again: " << endl;
		cin.clear();
		cin.ignore(1000, '\n');
		cin >> x;
	}
	cout << age(x) << endl;
	char y;
	cin >> y;
	while (y != 'Y' && y != 'N' && y != 'n' && y != 'y')
	{
		cout << "Please input the proper values.(Y/N)";
		cin.clear();
		cin.ignore(1000, '\n');
		cin >> y;
	}
	cout << choice(y) << endl;
	return 0;
}
