#include <iostream>
#include <string>
#include <math.h>
#include <array>
using namespace std;
string choices1(string ch)
{
	if (ch == "coffee")
	{
		return "Cashier: Which type of coffee would you like? Pick a number(1-3)\n1. Ice Coffee\n2. Milk Coffee\n3. Black Coffee\n";
	}
	else if (ch == "tea")
	{
		return "Cashier: Which type of tea would you like? Pick a number(1-3)\n1. Ice Tea\n2. Milk Tea\n3. Black Tea\n";
	}
}
string choices2a(int ch)
{
	switch (ch)
	{
	case 1:
	{
		cout << "Cashier: Would you like to add sugar with your Ice Coffee?(Y/N)" << endl;
		string yn;
		cin >> yn;
		if (yn == "y" || yn == "Y")
		{
			return "Cashier: Ice coffee with sugar coming right up!";
		}
		else if (yn == "n" || yn == "N")
		{
			return "Cashier: Ice coffee coming right up!";
		}
		else
		{
			cout << "Cashier: Uhh sir/miss..let us back it up.\n";
			int choice2 = 1;
			return choices2a(choice2);
		}
	}
	case 2:
	{
		cout << "Cashier: Would you like to add sugar with your Milk Coffee?(Y/N)" << endl;
		string yn;
		cin >> yn;
		if (yn == "y" || yn == "Y")
		{
			return "Cashier: Milk coffee with sugar coming right up!";
		}
		else if (yn == "n" || yn == "N")
		{
			return "Cashier: Milk coffee coming right up!";
		}
		else
		{
			cout << "Cashier: Uhh sir/miss..let us back it up.\n";
			int choice2 = 2;
			return choices2a(choice2);
		}
	}
	case 3:
	{
		cout << "Cashier: Would you like to add sugar with your Black Coffee?(Y/N)" << endl;
		string yn;
		cin >> yn;
		if (yn == "y" || yn == "Y")
		{
			return "Cashier: Black coffee with sugar coming right up!";
		}
		else if (yn == "n" || yn == "N")
		{
			return "Cashier: Black coffee coming right up!";
		}
		else
		{
			cout << "Cashier: Uhh sir/miss..let us back it up.\n";
			int choice2 = 3;
			return choices2a(choice2);
		}
	}
	}
}
string choices2b(int ch)
{
	switch (ch)
	{
	case 1:
	{
		cout << "Cashier: Would you like to add sugar with your Ice Tea?(Y/N)" << endl;
		string yn;
		cin >> yn;
		if (yn == "y" || yn == "Y")
		{
			return "Cashier: Ice tea with sugar coming right up!";
