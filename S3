int checka(int mon)
{
	int change;
	change = mon - 3;
	return change;
}
int checkb(int mon)
{
	int change;
	change = mon - 2;
	return change;
}
int checkc(int mon)
{
	int change;
	change = mon - 1;
	return change;
}
int main()
{
	string art[6][7] = {
	{"||||||||||||||||||||||||||||| MENU |||||||||||||||||||||||||||||"},
	{"|Coffee","		  Price","(AED)"," ||  || ","Tea","	             Price","(AED)|"},
	{"|Ice Coffee", "   ---- ", "3","         ||  ||", " Ice Tea", "     ---- ", "3         |"},
	{"|Milk Coffee", "  ---- ", "3","         ||  ||", " Milk Coffee", " ---- ", "3         |"},
	{"|Black Coffee", " ---- ", "3","         ||  ||", " Black Tea", "   ---- ", "3         |"},
	{"|____________________________||__||____________________________|"},
	};

	for (int x = 0; x < 6; x++)
	{
		cout << endl;
		for (int y = 0; y < 7; y++)
			cout << art[x][y];
	}
	cout << endl;
	cout << endl;
	string choice1;
	cout << "Cashier: Sir/Miss which type of drink would you prefer?? (Coffee/Tea)\n";
	cin >> choice1;
	for (int i = 0; i < choice1.length(); i++)
	{
		choice1[i] = tolower(choice1[i]);
	}
	while (choice1 != "coffee" && choice1 != "tea")
	{
		cout << "Cashier: Uhh Sir/Miss only pick one of those two. (Coffee/Tea)\n";
		cin.clear();
		cin.ignore(1000, '\n');
		cin >> choice1;
		for (int i = 0; i < choice1.length(); i++)
		{
			choice1[i] = tolower(choice1[i]);
		}
	}
	cout << choices1(choice1);

	int choice2;
	cin >> choice2;
	while (choice2 < 1 || choice2 > 3)
	{
		cout << "Cashier: Sir/Miss please pick the proper number.(1-3)\n";
		cin.clear();
		cin.ignore(1000, '\n');
		cin >> choice2;
	}
	if (choice1 == "coffee")
	{
		cout << choices2a(choice2);
	}
	if (choice1 == "tea")
	{
		cout << choices2b(choice2);
	}

	string name;
	cout << "\n\nCashier: What is your first name for your order? ";
	cin >> name;

	if (choice2 == 1)
	{
		cout << "Cashier: Hello " << name << " the cost of your order is 3 AED. How much are you going to pay it with?(Enter a Number)" << endl;
		int money;
		cin >> money;
		while (money < 3)
		{
			cout << "Cashier: " << name << " this amount of money is not enough please pay the cost or more." << endl;
			cin.clear();
			cin.ignore(1000, '\n');
			cin >> money;
		}
		cout << checka(money);
		cout << " AED is your change." << endl;
		if (choice1 == "coffee")
		{
			cout << "Cashier: Enjoy your Ice Coffee " << name << "!!";
		}
		else if (choice1 == "tea")
		{
			cout << "Cashier: Enjoy your Ice Tea " << name << "!!";
		}
	}
	else if (choice2 == 2)
	{
		cout << "Cashier: " << name << " the cost of your order is 2 AED. How much are you going to pay it with?(Enter a Number)" << endl;
		int money;
		cin >> money;
		while (money < 2)
		{
			cout << "Cashier: " << name << " this amount of money is not enough please pay the cost or more." << endl;
			cin.clear();
			cin.ignore(1000, '\n');
			cin >> money;
		}
		cout << checkb(money);
		cout << " AED is your change." << endl;
		if (choice1 == "coffee")
		{
			cout << "Cashier: Enjoy your Milk Coffee " << name << "!!";
		}
		else if (choice1 == "tea")
		{
			cout << "Cashier: Enjoy your Milk Tea " << name << "!!";
		}
	}
	else if (choice2 == 3)
	{
		cout << "Cashier: " << name << " the cost of your order is 1 AED. How much are you going to pay it with?(Enter a Number)" << endl;
		int money;
		cin >> money;
		while (money < 1)
		{
			cout << "Cashier: " << name << " this amount of money is not enough please pay the cost or more." << endl;
			cin.clear();
			cin.ignore(1000, '\n');
			cin >> money;
		}
		cout << checkc(money);
		cout << " AED is your change." << endl;
		if (choice1 == "coffee")
		{
			cout << "Cashier: Enjoy your Milk Coffee " << name << "!!";
		}
		else if (choice1 == "tea")
		{
			cout << "Cashier: Enjoy your Milk Tea " << name << "!!";
		}
	}
}
