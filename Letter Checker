#include <iostream>
using namespace std;

int main()
{
	char x;
	int count1, count2;

	cout << "Input a character to check whether its a vowel, a consonant, or a special charater: ";
	cin >> x;
	if (x == 'a' || x == 'e' || x == 'i' || x == 'o' || x == 'u' || x == 'A' || x == 'E' || x == 'I' || x == 'O' || x == 'U')
	{
		cout << "The input is a vowel." << endl;
	}
	count1 = isalpha(char(x));
	count2 = isdigit(char(x));
	if (count1 == 0 && count2 != 4)
	{
		cout << "The input is a special character." << endl;
	}
	else if (count1 != 2 && count2 == 4)
	{
		cout << "The input is a digit." << endl;
	}
	else if (count1 != 0 && count2 != 4 && x != 'a' && x != 'e' && x != 'i' && x != 'o' && x != 'u' && x != 'A' && x != 'E' && x != 'I' && x != 'O' && x != 'U')
	{
		cout << "The input is a consonant." << endl;
	}
	else
	{
		cout << "The input is incorrect.";
	}
	return 0;
}
