#include <iostream>
#include <string>
using namespace std;
int main()
{
	int y;
	cout << "Input a desired number to show its times table up to times 10: " << endl;
	cin >> y;
	while (cin.fail())
	{
		cout << "Invalid Input Please Try Again: " << endl;
		cin.clear();
		cin.ignore(1000, '\n');
		cin >> y;
	}
	for (int x = 0; x <= 10; x++)
	{
		cout << y << " x " << x << " = " << y * x << endl;

	}
}
