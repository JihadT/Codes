#include <iostream>
#include <string>
#include <math.h>
using namespace std;

int myPower(int x)
{
	x *= 1;
	return x;
}

int main()
{
	cout << "Input a Number to the power of 1-10: ";
	int x;
	cin >> x;
	while (cin.fail())
	{
		cout << "Invalid command enter the numbers again: " << endl;
		cin.clear();
		cin.ignore(1000, '\n');
		cin >> x;
	}
	for (int y = 1; y <= 10; y++)
	{
		cout << x << " to the power of " << y << " is " << pow(x, y) << endl;
	}
	return 0;
}
