#include <iostream>
using namespace std;

int main()
{
{
	int Sides;
	cout << "Enter the number of sides the shape you want to know: ";
	cin >> Sides;

	if (Sides == 3)
	{
		cout << "A shape with " << Sides << " sides is a TRIANGLE" << endl;
	}
	else if (Sides == 4)
	{
		cout << "A shape with " << Sides << " sides is a QUADRILATERAL" << endl;
	}
	else if (Sides == 5)
	{
		cout << "A shape with " << Sides << " sides is a PENTAGON" << endl;
	}
	else if (Sides == 6)
	{
		cout << "A shape with " << Sides << " sides is a HEXAGON" << endl;
	}
	else if (Sides == 7)
	{
		cout << "A shape with " << Sides << " sides is a HEPTAGON" << endl;
	}
	else if (Sides == 8)
	{
		cout << "A shape with " << Sides << " sides is a OCTAGON" << endl;
	}
	else if (Sides == 9)
	{
		cout << "A shape with " << Sides << " sides is a NONAGON" << endl;
	}
	else if (Sides == 10)
	{
		cout << "A shape with " << Sides << " sides is a DECAGON" << endl;
	}
	else
	{
		cout << "Errorcode:+(*&!@#) Give an actual number of sides" << endl;
	}
}
	cin.get();
	return 0;
}
